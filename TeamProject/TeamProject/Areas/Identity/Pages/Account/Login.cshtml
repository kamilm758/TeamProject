@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>

    .cities {
        background-color: #66BB6A;
        color: white;
        margin: 20px;
        padding: 20px;
    }
</style>
<div class="cities">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h3>Logowanie</h3>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button style=" background-color:white;
            color:#66BB6A;
            font-size:20px;
            padding: 15px 35px;
            border-radius: 8px;
            position:center;" type="submit" class="btn btn-primary">
                            Zaloguj
                        </button>
                    </div>

                </form>
            </section>
        </div>

    </div>
</div>
<div class="form-group">
    <p>
        <a style="color:#66BB6A;  font-weight:700" id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
    </p>
    <p>
        <a style="color:#66BB6A;  font-weight:700" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Załóż nowe konto</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
