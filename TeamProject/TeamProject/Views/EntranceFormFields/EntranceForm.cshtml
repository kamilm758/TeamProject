@model List<EntranceFormAnswers>

@{
    ViewData["Title"] = "Index";
}



<form asp-action="EntranceForm">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model[0].Name)*@
                    Nazwa
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model[0].Answer)*@
                    Odpowiedź
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <input hidden asp-for="@Model[i].IdField" />
                <tr>
                    <td>
                        <input hidden asp-for="@Model[i].Name" />
                        @Html.DisplayFor(model => model[i].Name)
                    </td>
                    <td>
                        <input asp-for="@Model[i].Answer" />
                    </td>
                    <td>
                        <input hidden asp-for="@Model[i].IdPatient" value="@ViewBag.bag" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

