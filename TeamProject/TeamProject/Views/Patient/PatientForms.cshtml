@model IEnumerable<FormGenerator.Models.PatientForms>

@{
    ViewData["Title"] = "Index";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #A5D6A7
    }

    th {
        background-color: #81C784;
        color: white;
    }

    a {
        color: #424242;
        font-weight: 500;
    }
</style>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPatient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdForm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.agreement)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPatient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdForm)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.agreement)
                </td>
            </tr>
        }
    </tbody>
</table>
