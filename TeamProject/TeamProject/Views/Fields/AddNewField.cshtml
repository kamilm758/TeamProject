@model FormGenerator.Models.Field

@{
    ViewData["Title"] = "AddNewField";
}

<h1>AddNewField</h1>

<h4>Field</h4>
<hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddNewField" asp-route-form="@ViewBag.formid">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type">
                        <option value="">Wybierz opcję</option>
                        <option value="text">Pole tekstowe</option>
                        <option value="checkbox">Checkbox</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Formularz" asp-controller="Forms" asp-route-id="@ViewBag.formid">Powrót do formularza</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
