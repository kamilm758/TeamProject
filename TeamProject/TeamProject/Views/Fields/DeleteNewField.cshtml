@model FormGenerator.Models.Field

@{
    ViewData["Title"] = "DeleteNewField";
}
<style>

    .cities {
        background-color: #66BB6A;
        color: white;
        margin: 20px;
        padding: 20px;
    }
</style>
<h1 style="color:#66BB6A;  font-weight:700">Usuwanie pola</h1>
<div class="cities">
    @if (ViewBag.message == true)
    {
        <h3>
            Pomyślnie usunięto
        </h3>

       
    }
    else
    {
        <h3>Na pewno chcesz usunąć te pole?</h3>
        <div>
            <h4>Field</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Nazwa
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                   Typ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Type)
                </dd>
            </dl>


            <form asp-action="DeleteNewField">
                <input type="hidden" asp-for="Id" />


                <input style=" background-color:white;
            color:#66BB6A;
            font-size:20px;
            padding: 15px 35px;
            border-radius: 8px;
            position:center;"  type="submit" value="Delete" class="btn btn-danger" />

              
            </form>

        </div>

    }
</div>
<div>
    <a style="color:#66BB6A;  font-weight:700" asp-action="EdycjaFormularza" asp-controller="Forms" asp-route-id="@ViewBag.IDFORM">Powrót do formualarza</a>

</div>

