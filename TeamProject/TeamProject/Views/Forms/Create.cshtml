@model FormGenerator.Models.Forms

@{
    ViewData["Title"] = "Create";
}

<div class="row" style="padding-top:40px">
    <div class="col-md-4 offset-4">
        <h4 class="text-center">Dodawanie nowego formularza</h4>
    </div>
    <div class="col">
        <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Powrót do menu głównego</a>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label hidden asp-for="Id" class="control-label"></label>
                <input hidden asp-for="Id" class="form-control" value=0 />
                <span hidden asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden asp-for="id_Category" class="control-label"></label>
                <input hidden asp-for="id_Category" class="form-control" value="@ViewBag.bag" />
                <span hidden asp-validation-for="id_Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input  type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>


<script>
    sessionStorage.removeItem('key');
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
